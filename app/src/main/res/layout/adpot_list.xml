<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:elevation="5dp"
    android:id="@+id/adoptLayout"
    android:layout_marginRight="8dp"
    android:background="@drawable/query_response"
    app:layout_constraintBottom_toBottomOf="@+id/animalname">


    <ImageView
        android:id="@+id/animalpic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/icon"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_android" />

    <TextView
        android:id="@+id/ngoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/query_response"
        android:fontFamily="sans-serif-condensed"
        android:maxWidth="250dp"
        android:minHeight="48dp"
        android:padding="12dp"
        android:text="@string/message_text"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/animalpic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toEndOf="@+id/animalpic"
        app:layout_constraintTop_toTopOf="@+id/animalpic" />


    <TextView
        android:id="@+id/animalname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:text="@string/message_time"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/animalpic"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/animalpic"
        app:layout_constraintTop_toBottomOf="@+id/animalpic" />

</androidx.constraintlayout.widget.ConstraintLayout>